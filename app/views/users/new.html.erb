<h1>Signup!</h1>
<%= form_tag '/users', method: :post do  %>
  <div>
    <%= label_tag :user_name %>
    <%= text_field_tag :user_name %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
  </div>
  <%= submit_tag "Submit" %>
  
<% end %>
